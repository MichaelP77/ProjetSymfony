{% extends 'base.html.twig' %}

{% block title %} {{article.title}} {% endblock %}

{% block body %}

<div class="container mt-5">

    <div class="row">
        <div class="col">
            <h1 class="article-title mt-3">{{ article.title }}</h1>
        </div>
    </div>

    <hr>


    <div class="row">
        <div class="col">
            <h2 class="article-slug mt-3">{{ article.slug }}</h2>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col">
            <h6 class="article-featuredText mt-3">{{ article.featuredtext }}</h6>
        </div>
    </div>



</div>

{% endblock %}
